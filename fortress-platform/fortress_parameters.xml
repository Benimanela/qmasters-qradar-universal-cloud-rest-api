<?xml version="1.0" encoding="UTF-8" ?>
<WorkflowParameterValues xmlns="http://qradar.ibm.com/UniversalCloudRESTAPI/WorkflowParameterValues/V2">

	<!-- "api_host" - Fortress API host (Default="https://develop-api.qfortress.ai")-->
	<Value name="api_host" value="<insert your api host here>"/>
	<!-- "api_key" - Fortress API key for QRadar (required) -->
	<Value name="api_key" value="<insert your api key here>"/>
	<!-- "api_secert" - Fortress API secret for QRadar (required) -->
	<Value name="api_secert" value="<insert your api secret here>"/>

	<!-- "severity" - Fortress alert severity, can be multiple separated by commas, allowed values: CRITICAL,HIGH,MEDIUM,LOW,NONE. (Default=All). (optional) -->
	<Value name="severity" value='"CRITICAL","HIGH","MEDIUM","LOW","NONE"'/>
	<!-- "status" - Show closed/open alerts, allows values: OPEN,CLOSED,DISMISSED,QUARANTINED,NO_CAPACITY,DETECTED,MITIGATED. (Default=all). (optional) -->
	<Value name="status" value='"OPEN","CLOSED","DISMISSED","QUARANTINED","NO_CAPACITY","DETECTED","MITIGATED"'/>

	<!-- "service_type" - This parameter is an array of strings used to filter alerts by service type, allows values: EDP,MAIL,CLOUD_STORAGE,VMDR. (Default=all). (optional) -->
	<Value name="service_type" value='"EDP","MAIL","CLOUD_STORAGE","VMDR"'/>

	<!-- "page_size" - Max number of alerts to return per poll (Default=100). (optional) -->
	<Value name="page_size" value="100"/>
	<!-- "time_zone" - select your time zone (Default=UTC). (optional) -->
	<Value name="time_zone" value="UTC"/>
</WorkflowParameterValues>